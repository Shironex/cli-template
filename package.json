{
  "name": "cli-template",
  "version": "1.2.1",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "cli-template": "./dist/index.js"
  },
  "keywords": [
    "cli",
    "template",
    "commander.js"
  ],
  "author": "Shironex",
  "license": "MIT",
  "description": "CLI template for creating a CLI tool using commander.js",
  "scripts": {
    "build": "tsup",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts interactive",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    "commitlint": "commitlint --edit",
    "commit": "cz",
    "release": "semantic-release",
    "release:dry": "semantic-release --dry-run",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "quallity:check": "pnpm run format:check && pnpm run lint && pnpm run test && pnpm run typecheck && pnpm run docs:build"
  },
  "packageManager": "pnpm@9.12.3",
  "dependencies": {
    "chalk": "^5.6.2",
    "cli-progress": "^3.12.0",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "inquirer": "^13.0.2",
    "ora": "^9.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/cli-progress": "^3.11.6",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "nock": "^14.0.10",
    "prettier": "^3.7.4",
    "semantic-release": "^25.0.2",
    "standard-version": "^9.5.0",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitepress": "^1.6.4",
    "vitest": "^4.0.15"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
